@model LacteosTolima.App.Models.Consumption

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Consumption</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.SilageAmout)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SilageAmout)
            @Html.ValidationMessageFor(model => model.SilageAmout)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HayAmount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HayAmount)
            @Html.ValidationMessageFor(model => model.HayAmount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CowId, "Cow")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CowId", String.Empty)
            @Html.ValidationMessageFor(model => model.CowId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
