@model IEnumerable<LacteosTolima.App.Models.Consumption>

@{
    ViewBag.Title = "Index";
}

<h2>Log of all the consumptions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Silage Consumed
        </th>
        <th>
            Hay Consumed
        </th>
        <th>
            Date of the consumption
        </th>
        <th>
            Cow who consumed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SilageAmout)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HayAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cow.Id) | @Html.DisplayFor(modelItem => item.Cow.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
