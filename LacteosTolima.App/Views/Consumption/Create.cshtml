@model LacteosTolima.App.Models.Consumption

@{
    ViewBag.Title = "Register consumption";
}

<h2>Register new consumption</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Consumption</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SilageAmout)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SilageAmout)
            @Html.ValidationMessageFor(model => model.SilageAmout)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HayAmount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HayAmount)
            @Html.ValidationMessageFor(model => model.HayAmount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CowId, "Cow")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CowId", String.Empty)
            @Html.ValidationMessageFor(model => model.CowId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List of Consumptions", "Index")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#Date').datepicker({ dateFormat: '@Html.ConvertDateFormat()' });
    });
</script>