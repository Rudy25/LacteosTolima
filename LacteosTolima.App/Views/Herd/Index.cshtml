@model IEnumerable<LacteosTolima.App.Models.Herd>

@{
    ViewBag.Title = "Index";
}

<h2>List of Current Herds</h2>

<ul class="options">
    @Html.ActionLink("Assemble a new herd", "Create") |
    @using (Html.BeginForm("ProductionReportHerdDay", "Herd"))
    {
        <span>Fecha: </span>
        @Html.TextBox("dayp")
        <input type="submit" value="Day Production Report" />
    }
</ul>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            JoinDate
        </th>
        <th>
            State
        </th>
        <th>
            Milker
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JoinDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Milker.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Logic Delete", "Deactivate", new { id = item.Id })
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dayp').datepicker({ dateFormat: '@Html.ConvertDateFormat()' });
    });
</script>